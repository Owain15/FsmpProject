<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:FSMP.MAUI.Pages"
       x:Class="FSMP.MAUI.AppShell"
       Title="FSMP Music Player">

    <TabBar>
        <ShellContent
            Title="Library"
            ContentTemplate="{DataTemplate pages:LibraryPage}" />
        <ShellContent
            Title="Now Playing"
            ContentTemplate="{DataTemplate pages:NowPlayingPage}" />
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>

</Shell>
